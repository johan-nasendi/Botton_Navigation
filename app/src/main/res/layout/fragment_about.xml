<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".FragmentAbout">

    <include android:id="@+id/be" layout="@layout/toolbar"/>
    <!-- TODO: Update blank fragment layout -->
<!--Johan-->
    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:id="@+id/cardView"
        cardCornerRadius="10dp"
        cardElevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:padding="10dp"
        app:cardBackgroundColor="@color/white"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="49dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:padding="12dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/lyt_img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/johan" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:layout_toRightOf="@id/lyt_img1"
                android:lines="1"
                android:text="@string/johan_nasendi"
                android:textColor="#1C1C1C"
                android:textSize="20dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/dev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nama"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/lyt_img1"
                android:text="@string/backend_developer"
                android:textColor="@color/black" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>